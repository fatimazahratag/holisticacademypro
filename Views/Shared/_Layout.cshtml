                    </ul>
                </div>

            </div>

            <div class="text-center mt-4">
                <small>&copy; 2025 Holistic Academy. All Rights Reserved.</small>
            </div>
        </div>
    </footer>



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            const sections = document.querySelectorAll('main section, #about, #mission, #vision, #president, #joinus, #contact');

            function removeActive() {
                navLinks.forEach(link => link.classList.remove('active'));
            }

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    let targetHref = this.getAttribute('href');
                    if (targetHref.startsWith('/')) targetHref = targetHref.substring(1);

                    const targetId = targetHref.replace('#', '');
                    const targetSection = document.getElementById(targetId);
                    if (targetSection) {
                        window.scrollTo({
                            top: targetSection.offsetTop - 50,
                            behavior: "smooth"
                        });
                        removeActive();
                        this.classList.add('active');
                    }
                });
            });

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop - 60;
                    if (window.pageYOffset >= sectionTop) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    let href = link.getAttribute('href');
                    if (href.startsWith('/')) href = href.substring(1);
                    if (href === '#' + current) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
